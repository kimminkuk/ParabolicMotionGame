<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParbolicMotionGame.GameBoardPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" IconImageSource="ic_autorenew.png" Clicked="OnRefreshTest"/>
    </ContentPage.ToolbarItems>
    
    <ListView ItemsSource="{Binding}"
              ItemTapped="ListView_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding NameParabolic_class}" Detail="{Binding LevelPrabolic_class}">
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>